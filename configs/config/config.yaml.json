{
  "data": {
    "data_dir": "data/processed",
    "raw_data_dir": "data/raw",
    "train_split": 0.7,
    "val_split": 0.2,
    "test_split": 0.1,
    "batch_size": 32,
    "num_workers": 4,
    "pin_memory": true,
    "shuffle_train": true,
    "input_size": [
      64,
      64
    ],
    "num_classes": 32,
    "image_channels": 1,
    "use_cross_validation": false,
    "cv_folds": 5,
    "min_samples_per_class": 100,
    "max_class_imbalance_ratio": 10.0
  },
  "augmentation": {
    "use_augmentation": true,
    "strength": "medium",
    "preserve_hands": true,
    "rotation_range": 20.0,
    "zoom_range": 0.2,
    "shift_range": 0.1,
    "shear_range": 5.0,
    "brightness_range": 0.2,
    "contrast_range": 0.2,
    "noise_probability": 0.2,
    "blur_probability": 0.2,
    "elastic_transform": true,
    "grid_distortion": false,
    "use_tta": false,
    "tta_samples": 5
  },
  "model": {
    "model_type": "cnn_advanced",
    "pretrained": false,
    "dropout_rate": 0.5,
    "conv_channels": [
      32,
      64,
      128,
      256
    ],
    "kernel_sizes": [
      3,
      3,
      3,
      3
    ],
    "pool_sizes": [
      2,
      2,
      2,
      2
    ],
    "hidden_dims": [
      512,
      256
    ],
    "use_batch_norm": true,
    "activation": "relu",
    "use_attention": false,
    "use_residual_connections": false
  },
  "training": {
    "num_epochs": 100,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "optimizer": "adam",
    "momentum": 0.9,
    "beta1": 0.9,
    "beta2": 0.999,
    "use_scheduler": true,
    "scheduler_type": "reduce_on_plateau",
    "scheduler_patience": 10,
    "scheduler_factor": 0.5,
    "step_size": 30,
    "gamma": 0.1,
    "use_early_stopping": true,
    "early_stopping_patience": 20,
    "early_stopping_min_delta": 0.0001,
    "use_gradient_clipping": true,
    "gradient_clip_value": 1.0,
    "use_mixed_precision": true,
    "loss_function": "cross_entropy",
    "label_smoothing": 0.1,
    "track_metrics": [
      "accuracy",
      "f1",
      "precision",
      "recall"
    ]
  },
  "validation": {
    "validation_frequency": 1,
    "save_best_model": true,
    "save_checkpoint_frequency": 10,
    "primary_metric": "accuracy",
    "compute_confusion_matrix": true,
    "compute_per_class_metrics": true,
    "save_top_k_models": 3,
    "monitor_metric": "val_accuracy",
    "monitor_mode": "max"
  },
  "system": {
    "device": "auto",
    "random_seed": 42,
    "deterministic": true,
    "benchmark": false,
    "log_level": "INFO",
    "log_to_file": true,
    "log_to_console": true,
    "experiment_name": "sign_language_recognition",
    "project_name": "arabic_sign_language",
    "use_wandb": false,
    "wandb_project": "sign-language-recognition",
    "output_dir": "outputs",
    "checkpoint_dir": "checkpoints",
    "log_dir": "logs"
  }
}